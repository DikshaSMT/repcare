<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Made Your Request</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/request" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="phone" placeholder="phone no">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mecname" placeholder="mechanic name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="problem" placeholder="problem">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder=" problem description">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/repcare">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>